@model IEnumerable<OnlineShopping.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Dashboard</h1>
<form asp-action="ProductDashboard">
    Product Title:<input type="text" name="Title"/><input type="submit" value="Search" />

</form>
  
<table class="table">
    <tbody>
        <tr>
            @foreach (var item in Model)
            {
                <td>
                    <img src="/ProductImages/@item.ProductIcon" width="100" height="100" /><br />
                    @Html.DisplayFor(modelItem => item.Title)<br />
                    Price: Rs. @Html.DisplayFor(modelItem => item.Price)<br />
                    @Html.DisplayFor(modelItem => item.Category.Name)<br />
                    <a asp-action="BuyProduct" asp-route-id="@item.Id" class="buyclass">Buy Product</a><br />
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            }
        </tr>
    </tbody>
</table>
